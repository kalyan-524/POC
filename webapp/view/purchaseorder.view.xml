<mvc:View controllerName="ladera.royalenfield.controller.purchaseorder"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified">

    <Page id="po" title="Create Purchase Order" showFooter="true">
    
    <Toolbar class="Potoolbar">
   
    <Button text="Back" icon="sap-icon://nav-back" press="onnavback"></Button>
    <Button text="Info" type="Emphasized"></Button>
    <Button text="SEQ" type="Emphasized"></Button>
    
    </Toolbar>

    <HBox >
            <VBox class="sapUiSmallMargin" width="400px" >
            <Label text="Purchase type"></Label>
             <Select id="Purchase"  width="150px">
                    <items>
                    </items>
                </Select>
            <Label text="Ship To Party"></Label>
             <Select id="Shiptoparty"  width="150px">
                    <items>
                    </items>
                </Select>
            <Label text="Adress">
                </Label>
                <Text text= '1 Diamond Industrial,
                                Chennai-600049' width="110px"></Text>                   
            </VBox>

            <VBox class="sapUiSmallMargin" width="400px">
            <Label text="Payment Type"></Label>
             <Select id="PaymentType" width="150px">
                    <items>
                    
                    </items>
                </Select>
                <!-- <Label text="Dealer Reference Num"></Label> -->
             <Label
			text="Dealer Reference Num"
			
			design="Standard" />
		    <Input id="input-b" width="150px" />

            <Label
			text="PO Ref Date"/>
            <DatePicker   placeholder=" " width="150px"></DatePicker>                         
            </VBox >

            <VBox class="sapUiSmallMargin" width="400px">
            <Label text="Credit Limit : "></Label>            
            <Label text="Current Order : "></Label>
            <Text text="0.00" width="130px"></Text>
            <Label text="Enable Unit Price :"></Label>
            <Switch type="AcceptReject" state="true" change="onenablebutton">
		    </Switch>
            <Label text="Balance Credit :"></Label>
            <Text text="0.00" width="150px"></Text>            
            </VBox>

            <VBox id ="vbox4" class="sapUiSmallMargin" width="400px">
            <Label text="Total Order Quantity: "></Label>
            <Text text="0" width="150px"></Text> 
            <Label text="VAT Amount: "></Label>
            <Text text="0.00" width="150px"></Text> 
            <Label text="Total Amount Excluding VAT: "></Label>
            <Text text="0.00" width="150px"></Text> 
            <Label text="Total Amount Including VAT: "></Label>
            <Text text="0.00" width="150px"></Text>
            </VBox>            
    </HBox>
    
          <HBox >  
		        <Table id="poTable" items="{data>/items}" >
                    <headerToolbar>
                        <Toolbar height="100px" class="Potoolbar">
                            <Title text="SEQ"/>      
                            <ToolbarSpacer/>                            
                                         <u:FileUploader id="Uploader" name="myFileUpload"
                                          uploadUrl="upload/" tooltip="Upload your file to the local server"
                                          placeholder="Choose File" width="250px"/>
                                          <!-- <u:FileUploader change="Handlexlupload"></u:FileUploader> -->
                                          <Button text="Upload"></Button>
                            <Button icon="sap-icon://add" text="Add Row" width="6rem" class="smallBtn" press="onAddRow"/>
                        </Toolbar>
                    </headerToolbar>

                    <columns>
                        <Column><Text text="Seq"/></Column>
                        <Column><Text text="Part"/></Column>
                        <Column><Text text="Quantity"/></Column>
                        <Column><Text text="In Stock"/></Column>
                        <Column><Text text="ETA"/></Column>
                        <Column><Text text="MSRP"/></Column>
                        <Column><Text text="Dealer Price"/></Column>
                        <Column><Text text="VAT"/></Column>
                        <Column><Text text="Amount"/></Column>
                    </columns>

                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{ >seq}"/>
                                <Input value="{data>part}" width="100%"/>
                                <Input value="{data>quantity}" type="Number"/>
                                <Input value="{data>inStock}"/>
                                <Input value="{data>eta}"/>
                                <Input value="{data>msrp}"/>
                                <Input value="{data>dealerPrice}"/>
                                <Input value="{data>vat}"/>
                                <Input value="{data>amount}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                </HBox>

             <!-- <Toolbar> -->
                <!-- <HBox justifyContent="End" class="sapUiSmallMarginTop">
                    <Button text="Clear" type="Reject" press="onClear"/>
                    <Button text="Review" type="Emphasized" press="onReview"/>
                </HBox> -->
                <!-- </Toolbar>  -->

<footer>
<OverflowToolbar>
<ToolbarSpacer/>
<Button text="Review" type="Emphasized" />
<Button text="Clear" type="Emphasized" />
</OverflowToolbar>
</footer>
     </Page>
    </mvc:View>